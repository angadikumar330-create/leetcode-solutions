class Solution(object):
    def plusOne(self, digits):
        for i in range(len(digits) - 1, -1, -1):
            
            # if digit less than 9, just add 1
            if digits[i] < 9:
                digits[i] += 1
                return digits
            
            # if digit is 9, make it 0 and carry forward
            digits[i] = 0
        
        # if all digits were 9
        return [1] + digits
